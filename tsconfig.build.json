{
  "compilerOptions": {
    "module": "ESNext",
    "strict": false,
    "declaration": true,
    "noImplicitAny": false,
    "sourceMap": true,
    "removeComments": true,
    "allowJs": true,
    "allowUmdGlobalAccess": true,
    "allowUnusedLabels": true,
    "allowUnreachableCode": true,
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "include": ["./src/js"],
  "exclude": ["dist", "node_modules"]
}
