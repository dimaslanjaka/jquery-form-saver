/*
 * VSCode Typehinting Module
 */
 {
  "compilerOptions": {
    "module": "CommonJS",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "outDir": "tmp/js",
    "moduleResolution": "Node",
    "allowJs": true,
    "typeRoots": [
      "./node_modules/@types",
      "./libs/typings",
      "./libs/js"
    ],
    "types": [
      "datatables.net",
      "jquery",
      "requirejs",
      "node",
      "select2"
    ],
    "target": "ES5",
    "lib": [
      "DOM",
      "ES5",
      "ES6",
      "ES2015",
      "ES2016",
      "ES2017",
      "ES2018",
      "ES2019",
      "ES2020"
    ]
  },
  "include": [
    "./src/js",
    "./test/"
  ],
  "exclude": [
    "dist",
    "node_modules"
  ]
}